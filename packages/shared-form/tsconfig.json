{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2022",
        "module": "ESNext",
        "types": [
            "vitest/importMeta"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true
    },
    "include": [
        "src/**/*"
    ]
}