{
    "name": "@nextbjj/form",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist"
    ],
    "tsup": {
        "entry": [
            "src/index.ts"
        ],
        "treeshake": true,
        "sourcemap": true,
        "minify": true,
        "clean": true,
        "dts": true,
        "splitting": false,
        "format": [
            "cjs",
            "esm"
        ],
        "external": [
            "react"
        ]
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "tsc"
    },
    "devDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tsup": "^6.5.0",
        "typescript": "^4.9.4",
        "vitest": "^0.26.3"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    }
}