{
  "name": "@nextbjj/repo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test:yarnhook": "yarnhook",
    "test:manypkg": "manypkg check",
    "test:e2e": "turbo run build && turbo run e2e:test",
    "e2e": "turbo run build && turbo run e2e:test",
    "ci": "turbo run build e2e:test lint",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:core": "turbo run dev --parallel --filter=api --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && husky install"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.19.0",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2",
    "@nextbjj/eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "turbo": "^1.6.3",
    "yarnhook": "^0.6.0"
  }
}
